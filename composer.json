{
    "name": "wupos/wupos",
    "version": "0.1.0",
    "description": "Professional Point of Sale for WooCommerce",
    "type": "wordpress-plugin",
    "keywords": [
        "wordpress",
        "woocommerce",
        "pos",
        "point-of-sale",
        "terminal"
    ],
    "homepage": "https://github.com/AnglDavd/wupos",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "WUPOS Team",
            "homepage": "https://github.com/AnglDavd/wupos"
        }
    ],
    "support": {
        "issues": "https://github.com/AnglDavd/wupos/issues",
        "source": "https://github.com/AnglDavd/wupos"
    },
    "require": {
        "php": ">=8.0",
        "composer/installers": "^2.0"
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpunit/phpunit": "^9.0",
        "yoast/phpunit-polyfills": "^2.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "szepeviktor/phpstan-wordpress": "^1.3"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "extra": {
        "installer-name": "wupos"
    },
    "autoload": {
        "psr-4": {
            "WUPOS\\": "includes/"
        },
        "files": [
            "includes/wupos-core-functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "WUPOS\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcs:fix": "phpcbf",
        "phpstan": "phpstan analyse --memory-limit=1G",
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "install-codestandards": [
            "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
        ],
        "post-install-cmd": [
            "@install-codestandards"
        ],
        "post-update-cmd": [
            "@install-codestandards"
        ]
    },
    "scripts-descriptions": {
        "phpcs": "Run PHP Code Sniffer",
        "phpcs:fix": "Run PHP Code Beautifier and Fixer",
        "phpstan": "Run PHPStan static analysis",
        "test": "Run PHPUnit tests",
        "test:coverage": "Run PHPUnit tests with coverage report"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}